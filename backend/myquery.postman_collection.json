{
    "info": {
        "name": "MyQuery API",
        "description": "API collection for the MyQuery document AI chatbot",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "User Management",
            "item": [
                {
                    "name": "Create User",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/users",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "users"
                            ]
                        },
                        "description": "Create a new user account with the provided details."
                    }
                },
                {
                    "name": "Update User",
                    "request": {
                        "method": "PUT",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/users/{user_id}",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "users",
                                "{user_id}"
                            ]
                        },
                        "description": "Update user information"
                    }
                }
            ]
        },
        {
            "name": "Authentication",
            "item": [
                {
                    "name": "Verify Email",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/verify-email",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "verify-email"
                            ]
                        },
                        "description": "Verify email address using the verification token."
                    }
                },
                {
                    "name": "Login",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/login",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "login"
                            ]
                        },
                        "description": "Login with email and password to get access token."
                    }
                },
                {
                    "name": "Request Password Reset",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/request-password-reset",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "request-password-reset"
                            ]
                        },
                        "description": "Request a password reset token."
                    }
                },
                {
                    "name": "Reset Password",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/reset-password",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "reset-password"
                            ]
                        },
                        "description": "Reset password using the reset token."
                    }
                }
            ]
        },
        {
            "name": "Document Management",
            "item": [
                {
                    "name": "Upload Files",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{auth_token}}",
                                "description": "Required for authenticated endpoints"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/upload",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "upload"
                            ]
                        },
                        "description": "Upload one or more documents (PDF or DOC) for processing.",
                        "body": {
                            "mode": "formdata",
                            "formdata": [
                                {
                                    "key": "files",
                                    "type": "file",
                                    "src": "/path/to/your/file.pdf",
                                    "description": "Upload PDF or DOC files. Make sure you have set the auth_token in environment variables."
                                }
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Query",
            "item": [
                {
                    "name": "Ask Question",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/query",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "query"
                            ]
                        },
                        "description": "Ask a question about the uploaded documents."
                    }
                }
            ]
        },
        {
            "name": "Health",
            "item": [
                {
                    "name": "Read Root",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                ""
                            ]
                        },
                        "description": "Health check endpoint."
                    }
                }
            ]
        },
        {
            "name": "Documentation",
            "item": [
                {
                    "name": "Generate Postman Docs",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/generate-postman",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "generate-postman"
                            ]
                        },
                        "description": "Generate and push the Postman collection directly to Postman."
                    }
                }
            ]
        }
    ],
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:8000",
            "type": "string"
        },
        {
            "key": "auth_token",
            "value": "your_auth_token_here",
            "type": "string",
            "description": "Get this token from the /users endpoint response"
        },
        {
            "key": "user_id",
            "value": "your_user_id_here",
            "type": "string",
            "description": "Get this ID from the /users endpoint response"
        },
        {
            "key": "session_id",
            "value": "your_session_id_here",
            "type": "string"
        }
    ]
}